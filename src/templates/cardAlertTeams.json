{
  "@type": "MessageCard",
  "@context": "http://schema.org/extensions",
  "themeColor": "${themeColor}",
  "summary": "${summary}",
  "sections": [
    {
      "activityTitle": "${title-card}",
      "activitySubtitle": "${sub-title}",
      "activityImage": "${image}",
      "markdown": true
    },
    {

      "startGroup": true,
      "heroImage": { "image": "${image-alert}" },
      "title": "**Sistema de Monitoreo GitHub EMU**",
      "text": "> Categoría: **${severityBadge}**",
      "markdown": true
    },
    {
      "startGroup": true,
      "title": "**Detalles de la detección**",
      "facts": [
        { "name": "Tipo de Evento", "value": "${tipo-evento}" },
        { "name": "Repositorio", "value": "${repository}" },
        { "name": "Rama", "value": "${branch}" },
        { "name": "Fecha y Hora", "value": "${formattedDate}" },
        { "name": "Usuario", "value": "${actor}" }
      ],
      "markdown": true
    },
    {
      "startGroup": true,
      "title": "\n**Mensaje de Alerta**\n",
      "text": "```${alert}```",
      "markdown": true
    },
    {
      "startGroup": true,
      "title": "**Información Adicional**",
      "text": "Este mensaje fue generado automáticamente.",
      "markdown": true
    }
  ],
  "potentialAction": [
    {
      "@type": "OpenUri",
      "name": "GitHub EMU",
      "targets": [
        { "os": "default", "uri": "https://github.com/${repository}" }
      ]
    },
    {
      "@type": "OpenUri",
      "name": "Lineamiento de GIT",
      "targets": [
        { "os": "default", "uri": "https://docs.github.com/en/webhooks" }
      ]
    }
  ]
}
